<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll System - Homepage</title>
    <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>
    <div class="slider-container">
        <!-- Left arrow to slide back -->
        <div class="arrow left hidden" id="left-arrow">&#10094;</div>

        <!-- Slider wrapper for the content -->
        <div class="slider-wrapper" id="slider">
            <!-- Home Section -->
            <section class="slide">
                <h1>Welcome to the Payroll System</h1><br>
                <p>This is the homepage of your Payroll System built with Node.js.</p>
                <a href="/signup" class="btn-signup">Sign Up</a>
            </section>

            <!-- About Section -->
            <section class="slide">
                <h1>About Us</h1><br>
                <p>We provide comprehensive payroll solutions for businesses to help manage employee payments, taxes, and benefits efficiently.</p>
            </section>
        </div>

        <!-- Right arrow to slide forward -->
        <div class="arrow right" id="right-arrow">&#10095;</div>
    </div>

    <script>
        let currentSlide = 0;
        const slider = document.getElementById('slider');
        const totalSlides = document.querySelectorAll('.slide').length;
        const leftArrow = document.getElementById('left-arrow');
        const rightArrow = document.getElementById('right-arrow');

        // Function to update slide position and arrow visibility
        function updateSlide() {
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;

            // Show or hide arrows based on the current slide
            if (currentSlide === 0) {
                leftArrow.classList.add('hidden'); // Hide left arrow on the first slide
                rightArrow.classList.remove('hidden');
            } else if (currentSlide === totalSlides - 1) {
                rightArrow.classList.add('hidden'); // Hide right arrow on the last slide
                leftArrow.classList.remove('hidden');
            } else {
                leftArrow.classList.remove('hidden');
                rightArrow.classList.remove('hidden');
            }

            // Debugging log to check which slide is currently displayed
            console.log(`Slide ${currentSlide + 1} of ${totalSlides}`);
        }

        // Right arrow functionality
        rightArrow.addEventListener('click', () => {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                updateSlide();
            }
        });

        // Left arrow functionality
        leftArrow.addEventListener('click', () => {
            if (currentSlide > 0) {
                currentSlide--;
                updateSlide();
            }
        });

        // Initial call to set arrow visibility
        updateSlide();
    </script>

