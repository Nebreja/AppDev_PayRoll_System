<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll System - Homepage</title>
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="slider-container">
        <!-- Left arrow to slide back -->
        <div class="arrow left" id="left-arrow">&#10094;</div> 

        <!-- Slider wrapper for the content -->
        <div class="slider-wrapper" id="slider">
            <!-- Home Section -->
            <section class="slide">
                <h1>Welcome to the Payroll System</h1>
                <p>Streamline your payroll processes and ensure accuracy and compliance.</p>
                <a href="/signup" class="btn btn-primary btn-signup">Sign Up</a>
            </section>

            <!-- About Section -->
            <section class="slide">
                <h1>About Us</h1>
                <p>We provide comprehensive payroll solutions for businesses to help manage employee payments, taxes, and benefits efficiently.</p>
            </section>
        </div>

        <!-- Right arrow to slide forward -->
        <div class="arrow right" id="right-arrow">&#10095;</div>
    </div>

    <!-- Features Section -->
    <section id="features" class="my-5">
        <div class="container">
            <h2 class="text-center">Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Automated Payroll</h5>
                            <p class="card-text">Automatically calculate salaries, taxes, and deductions.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Tax Compliance</h5>
                            <p class="card-text">Stay compliant with the latest tax laws and regulations.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Secure Data</h5>
                            <p class="card-text">Ensure the safety of your employees' sensitive information.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="my-5 bg-light">
        <div class="container">
            <h2 class="text-center">What Our Clients Say</h2>
            <div class="row">
                <div class="col-md-6">
                    <blockquote class="blockquote">
                        <p class="mb-0">Using this payroll system has simplified our processes tremendously!</p>
                        <footer class="blockquote-footer">Jane Smith, <cite title="Source Title">CEO of XYZ Corp</cite></footer>
                    </blockquote>
                </div>
                <div class="col-md-6">
                    <blockquote class="blockquote">
                        <p class="mb-0">I love the automated features; it saves us so much time!</p>
                        <footer class="blockquote-footer">John Doe, <cite title="Source Title">HR Manager at ABC Ltd</cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="my-5">
        <div class="container">
            <h2 class="text-center">Contact Us</h2>
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your Name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Your Email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="3" placeholder="Your Message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </section>

    <script>
        // JavaScript to handle sliding effect
        let currentSlide = 0;

        // Get the slider and the total number of slides
        const slider = document.getElementById('slider');
        const totalSlides = document.querySelectorAll('.slide').length;

        // Right arrow functionality
        document.getElementById('right-arrow').addEventListener('click', () => {
            currentSlide = (currentSlide + 1) % totalSlides;
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        });

        // Left arrow functionality
        document.getElementById('left-arrow').addEventListener('click', () => {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        });
    </script>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
