<body>
    <div class="container">
        <form method="POST" action="/signin">
            <h1>Sign In</h1>
            <p>Enter your personal details to use all of site features</p>
            <span>or use your id number and  password</span>
            <input type="text" name="idnum" placeholder="ID Number" required>
            <input type="password" name="password" id="password" placeholder="Password" required>
            <button type="submit" name="login" href="/employee">Sign In</button>
            <p>Add an account.<a href="/signup" class="register"> Sign Up</a></p>
        </form>
    </div>
</body>
