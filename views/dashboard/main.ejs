<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Admin Dashboard</h1>

        <div class="row">
            <!-- Total Employees -->
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Employees</h5>
                        <p class="card-text fs-4"><%= totalEmployees %></p>
                    </div>
                </div>
            </div>

            <!-- Total Payroll Expense -->
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Payroll Expense</h5>
                        <p class="card-text fs-4">$<%= totalPayrollExpense.toFixed(2) %></p>
                    </div>
                </div>
            </div>

            <!-- Attendance Summary -->
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Attendance Summary for <%= currentMonth %></h5>
                        <p class="card-text">Present: <%= attendance.presentCount %></p>
                        <p class="card-text">Absent: <%= attendance.absentCount %></p>
                        <p class="card-text">On Leave: <%= attendance.onLeaveCount %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row mt-5">
            <div class="col-md-6">
                <h2>Attendance Trends</h2>
                <canvas id="attendanceChart" width="400" height="200"></canvas>
            </div>
            <div class="col-md-6">
                <h2>Payroll Distribution</h2>
                <canvas id="payrollChart" width="400" height="200"></canvas>
            </div>
        </div>

        <!-- Navigation Links -->
        <div class="row mt-4">
            <div class="col">
                <a href="/employees" class="btn btn-outline-primary btn-lg">Manage Employees</a>
                <a href="/payroll" class="btn btn-outline-success btn-lg">Manage Payroll</a>
                <a href="/attendance" class="btn btn-outline-warning btn-lg">View Attendance</a>
            </div>
        </div>
    </div>

    <!-- SweetAlert and Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Attendance Data
        const attendanceData = <%- JSON.stringify(attendanceData || []) %>;

        const labels = attendanceData.map((data) => data.month);
        const present = attendanceData.map((data) => data.present);
        const absent = attendanceData.map((data) => data.absent);
        const onLeave = attendanceData.map((data) => data.onLeave);

        const ctx = document.getElementById('attendanceChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels,
                datasets: [
                    {
                        label: 'Present',
                        data: present,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    },
                    {
                        label: 'Absent',
                        data: absent,
                        backgroundColor: 'rgba(255, 99, 132, 0.6)',
                    },
                    {
                        label: 'On Leave',
                        data: onLeave,
                        backgroundColor: 'rgba(255, 206, 86, 0.6)',
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                },
            },
        });

        // Payroll Data
        const payrollData = <%- JSON.stringify(payrollData || []) %>;

        const payrollLabels = payrollData.map((data) => data.position);
        const payrollTotals = payrollData.map((data) => data.totalSalary);

        const ctxPayroll = document.getElementById('payrollChart').getContext('2d');
        new Chart(ctxPayroll, {
            type: 'pie',
            data: {
                labels: payrollLabels,
                datasets: [
                    {
                        data: payrollTotals,
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                        ],
                    },
                ],
            },
            options: {
                responsive: true,
            },
        });
    </script>
</body>
</html>
