<!DOCTYPE html>
<html lang="en">
<head>
    <title>Employee List</title>
</head>
<body>
    <h1>Employee List</h1>
    <a href="/employees/add">Add Employee</a>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>

            <form action="/employees/search" method="GET" class="mb-3">
                <input type="text" name="query" class="form-control" placeholder="Search employees by name, email, or position" value="<%= query || '' %>">
                <button type="submit" class="btn btn-primary mt-2">Search</button>
            </form>
            
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
                <tr>
                    <td><%= employee.id %></td>
                    <td><%= employee.name %></td>
                    <td><%= employee.email %></td>
                    <td><%= employee.position %></td>
                    <td><%= employee.salary %></td>
                    <td>
                        <a href="/employees/edit/<%= employee.id %>">Edit</a>
                        <form action="/employees/delete/<%= employee.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
