<!DOCTYPE html>
<html lang="en">
<head>
    <title>Payroll Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Payroll Report</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Email</th>
                    <th>Position</th>
                    <th>Month</th>
                    <th>Year</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
                <% payrollRecords.forEach(record => { %>
                    <tr>
                        <td><%= record.Employee.name %></td>
                        <td><%= record.Employee.email %></td>
                        <td><%= record.Employee.position %></td>
                        <td><%= record.month %></td>
                        <td><%= record.year %></td>
                        <td>$<%= record.salary.toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <h3>Total Expense: $<%= totalExpense.toFixed(2) %></h3>
    </div>
    <a href="/reports/payroll/export-csv" class="btn btn-primary mb-3">Export Payroll as CSV</a>
</body>
</html>
