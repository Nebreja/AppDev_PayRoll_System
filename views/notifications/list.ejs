<!DOCTYPE html>
<html lang="en">
<head>
    <title>Notifications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Notifications</h1>
        <ul class="list-group">
            <% notifications.forEach(notification => { %>
                <li class="list-group-item <%= notification.read ? '' : 'list-group-item-warning' %>">
                    <h5><%= notification.title %></h5>
                    <p><%= notification.message %></p>
                    <form action="/notifications/mark-as-read/<%= notification.id %>" method="POST" style="display:inline;">
                        <% if (!notification.read) { %>
                            <button class="btn btn-sm btn-primary">Mark as Read</button>
                        <% } %>
                    </form>
                    <small><%= new Date(notification.createdAt).toLocaleString() %></small>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
