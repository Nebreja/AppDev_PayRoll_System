<!DOCTYPE html>
<html lang="en">
<head>
    <title>Security Logs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Security Logs</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Status</th>
                    <th>IP Address</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr>
                        <td><%= new Date(log.timestamp).toLocaleString() %></td>
                        <td><%= log.User ? `${log.User.name} (${log.User.email})` : 'Unauthenticated' %></td>
                        <td><%= log.action %></td>
                        <td><%= log.status %></td>
                        <td><%= log.ipAddress %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
