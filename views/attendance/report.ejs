<!DOCTYPE html>
<html lang="en">
<head>
    <title>Attendance Report</title>
</head>
<body>
    <h1>Attendance Report</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Email</th>
                <th>Position</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% attendanceRecords.forEach(record => { %>
                <tr>
                    <td><%= record.Employee.name %></td>
                    <td><%= record.Employee.email %></td>
                    <td><%= record.Employee.position %></td>
                    <td><%= record.date %></td>
                    <td><%= record.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
